<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<!-- financial staff -->
	<class name="expense.model.FinancialStaff" table="financialstaff" catalog="expense_apply">
		<id name="id" column="FSId" length="10" type="string">
			<generator class="assigned" />
		</id>
		<property name="name" column="FSName" length="20" type="string" />
		<property name="pwd" column="FSPwd" length="20" type="srting" />
	</class>

	<!-- teacher -->
	<class name=""></class>
	
	<!-- program plan category -->
	
	<!-- program technique resource -->
	

	<!-- ReaderType -->
	<class name="booklib.model.ReaderType" table="readertype"
		catalog="booklib">
		<id name="readerTypeId" column="readertypeid" type="int">
			<generator class="increment"></generator>
		</id>
		<property name="readerTypeName" column="readertypename" type="string"
			not-null="true" length="50"></property>
		<property name="lendBookLimitted" column="lendbooklimitted"
			type="int" not-null="true"></property>
	</class>

	<!-- Reader -->
	<class name="booklib.model.Reader" table="reader" catalog="booklib">
		<id name="readerId" column="readerid" type="string" length="20">
			<generator class="assigned"></generator>
		</id>
		<property name="readerName" column="readerName" type="string"
			not-null="true" length="50"></property>
		<property name="readerTypeId" column="readerTypeId" type="integer"
			not-null="true"></property>
		<property name="lendBookLimitted" column="lendBookLimitted"
			type="integer" not-null="true"></property>
		<property name="createDate" column="createDate" type="java.util.Date"
			not-null="true"></property>
		<property name="creatorUserId" column="creatorUserId" type="string"
			not-null="true" length="20"></property>
		<property name="removeDate" column="removeDate" type="java.util.Date"></property>
		<property name="removerUserId" column="removerUserId" type="string"
			length="20"></property>
		<property name="stopDate" column="stopDate" type="java.util.Date"></property>
		<property name="stopUserId" column="stopUserId" type="string"
			length="20"></property>
	</class>

	<!-- Publisher -->
	<class name="booklib.model.Publisher" table="publisher" catalog="booklib">
		<id name="pubid" column="pubid" type="string" length="20">
			<generator class="assigned"></generator>
		</id>
		<property name="publisherName" column="publisherName" type="string"
			not-null="true" length="50"></property>
		<property name="address" column="address" type="string"
			length="200"></property>
	</class>

	<!-- Book -->
	<class name="booklib.model.Book" table="book" catalog="booklib">
		<id name="barcode" column="barcode" type="string" length="20">
			<generator class="assigned"></generator>
		</id>
		<property name="bookname" column="bookname" type="string"
			not-null="true" length="200"></property>
		<property name="pubid" column="pubid" type="string" length="20"></property>
		<property name="price" column="price" type="double" not-null="true"></property>
		<property name="state" column="state" type="string" not-null="true"
			length="20"></property>
	</class>

	<!-- BookLendRecord -->
	<class name="booklib.model.BookLendRecord" table="booklendrecord"
		catalog="booklib">
		<id name="id" column="id" type="integer">
			<generator class="assigned"></generator>
		</id>
		<property name="readerid" column="readerid" type="string"
			not-null="true" length="20"></property>
		<property name="bookBarcode" column="bookBarcode" type="string"
			not-null="true" length="20"></property>
		<property name="lendDate" column="lendDate" type="java.util.Date"
			not-null="true"></property>
		<property name="returnDate" column="returnDate" type="java.util.Date"></property>
		<property name="lendOperUserid" column="lendOperUserid" type="string"
			not-null="true" length="20"></property>
		<property name="returnOperUserid" column="returnOperUserid"
			type="string" length="20"></property>
		<property name="penalSum" column="penalSum" type="double"></property>
	</class>

</hibernate-mapping>
